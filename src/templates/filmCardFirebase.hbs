  <li class='gallery-item-card' data-id='{{id}}'>
    <div class='card'>
      <div class='poster-container'>
        {{#if poster_path}}
          <img
            class='poster'
            data-source='https://image.tmdb.org/t/p/w500{{backdrop_path}}'
            alt='{{title}}'
            src='https://image.tmdb.org/t/p/w500{{poster_path}}'
          />
        {{else}}
          <img
            src='https://cdn.pixabay.com/photo/2015/09/09/17/51/film-932154_960_720.jpg'
            alt='{{original_title}}'
          />

        {{/if}}
      </div>
      <div class='text-container'>
        <h2 class='text-title'>{{original_title}}</h2>
        <div class='text-details'>
          <p class='text-ganre'>{{genre_ids}} | {{release_date}}</p>
          <p class='text-rating is-hidden'>{{vote_average}}</p>
        </div>
      </div>
    </div>
  </li>